<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     xmlns:tc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".MainActivity" >

    <!-- title -->

   <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_title_height"
        android:background="@drawable/bg_title"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/view_padding"
            android:paddingRight="@dimen/view_padding"
            android:onClick="btn_back" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_back" >
            </ImageView>
        </LinearLayout>

        <TextView
            android:id="@+id/textView_title"
            style="@style/text_24ffffff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/setting" >
        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="@dimen/view_padding"
            android:layout_alignParentRight="true"
            android:onClick="btn_confirm"
            android:visibility="invisible" >

            <Button
                style="@style/text_15ffffff"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/btn_text"
                android:gravity="center"
                android:text="@string/confirm" />
        </LinearLayout>
    </RelativeLayout>
    
   <LinearLayout 
       android:layout_height="match_parent"
       android:layout_width="match_parent"
       android:layout_weight="1"
       android:orientation="vertical">
       
       <LinearLayout 
           android:layout_height="match_parent"
           android:layout_width="match_parent"
           android:layout_weight="1"
           android:orientation="vertical"
           android:gravity="center">
           
           <ImageView 
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:background="@drawable/ic_launcher"/>
           
           <TextView
               android:id="@+id/textView_version"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               style="@style/text_16_666666"
               android:textSize="20sp"
               android:paddingTop="10dp"
               ></TextView>
           
           
       </LinearLayout>
       
        <LinearLayout 
           android:layout_height="match_parent"
           android:layout_width="match_parent"
           android:layout_weight="1"
            android:paddingLeft="@dimen/activity_horizontal_margin"
           android:orientation="vertical"
           android:gravity="center_horizontal">
           
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/img_line_between"></ImageView>
            
            <LinearLayout 
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:onClick="btn_language"
                android:background="@drawable/layout_selector"
                android:orientation="horizontal">
                
                <TextView
                    android:id="@+id/textView_language"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    style="@style/text_16_666666"
                    android:textSize="18sp"
                    android:text="@string/setting_language"></TextView>
                
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@drawable/img_right"></ImageView>
                
            </LinearLayout>
            
            
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/img_line_between"></ImageView>
            
            <LinearLayout 
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:onClick="btn_guide_help"
                 android:background="@drawable/layout_selector"
                android:orientation="horizontal">
                
                <TextView
                    android:id="@+id/textView_guide_help"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    style="@style/text_16_666666"
                     android:textSize="18sp"
                    android:text="@string/setting_guide_help"></TextView>
                
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@drawable/img_right"></ImageView>
                
            </LinearLayout>
            
             <ImageView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/img_line_between"></ImageView>
             
             
              <LinearLayout 
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:onClick="btn_ring"
                 android:background="@drawable/layout_selector"
                android:orientation="horizontal">
                
                <TextView
                    android:id="@+id/textView_ring"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    style="@style/text_16_666666"
                     android:textSize="18sp"
                    android:text="@string/ring"></TextView>
                
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@drawable/img_right"></ImageView>
                
            </LinearLayout>
            
             <ImageView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/img_line_between"></ImageView>
             
             
               <LinearLayout 
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:onClick="btn_location"
                 android:background="@drawable/layout_selector"
                android:orientation="horizontal">
                
                <TextView
                    android:id="@+id/textView_location"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    style="@style/text_16_666666"
                     android:textSize="18sp"
                    android:text="@string/location"></TextView>
                
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@drawable/img_right"></ImageView>
                
            </LinearLayout>
            
             <ImageView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/img_line_between"></ImageView>
             
             
            
           </LinearLayout>
       
   </LinearLayout>
 

</LinearLayout>